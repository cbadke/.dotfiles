#!/bin/bash

# fork of patata https://github.com:KubikPixel/patata

WORK=25
PAUSE=5
POMODORI=2
INTERACTIVE=true
MUTE=false

show_help() {
	cat <<-END
		usage: pomo [-s] [-m] [-w m] [-b m] [-p i] [-t t] [-h]
		    -s: simple output. Intended for use in scripts
		        When enabled, potato outputs one line for each minute, and doesn't print the bell character
		        (ascii 007)

		    -m: mute -- don't play sounds when work/break is over
		    -w m: let work periods last m minutes (default is 25)
		    -b m: let break periods last m minutes (default is 5)
		    -p i: let iterate of pomodori bevor the big break (default is 4)
		    -t t: let task ID from Taskwarrior to start (default is the most urgent task)
		    -h: print this message
	END
}

play_notification() {
	afplay /Users/cbadke/git/patata/notification.wav&
}

while getopts :sw:b:p:t:m opt; do
	case "$opt" in
	s)
		INTERACTIVE=false
	;;
	m)
		MUTE=true
	;;
	w)
		WORK=$OPTARG
	;;
	b)
		PAUSE=$OPTARG
	;;
	p)
		POMODORI=$OPTARG
	;;
	t)
		TASK=$OPTARG
	;;
	h|\?)
		show_help
		exit 1
	;;
	esac
done

if [[ -z "$TASK" ]]; then
  clear
  task
  read -p "What task are you working on? " TASK
fi

time_left="%im left of %s"

trap ctrl_c INT
function ctrl_c() {
  printf "\n\nQuitting task early\n\n"
  task $TASK stop

  exit 1
}

if $INTERACTIVE; then
    task $TASK list
	time_left="\r$time_left"
else
    task $TASK list
	time_left="$time_left\n"
fi

# while true
for ((p=1; p<=$POMODORI; p++))
do

  task $TASK start
  printf "\nStarting pomo $p of $POMODORI\n"

	for ((i=$WORK; i>0; i--))
	do
		printf "$time_left" $i "work"
		sleep 60
	done

	! $MUTE && play_notification
	if $INTERACTIVE; then
		echo -e "\a"
		echo "Work over"
		read
	fi

  task $TASK stop

	for ((i=$PAUSE; i>0; i--))
	do
		printf "$time_left" $i "rest"
		sleep 60
	done

	! $MUTE && play_notification
	if $INTERACTIVE; then
		echo -e "\a"
		echo "Rest over"
		read
	fi
done

echo "Take a coffee break! â˜•"
